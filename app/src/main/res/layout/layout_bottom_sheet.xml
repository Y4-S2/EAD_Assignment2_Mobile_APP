<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    >
<!--   join queue button -->
    <Button
        android:id="@+id/join_queue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Join Queue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="joinQueue"
        />

<!--    left before pump button -->
    <Button
        android:id="@+id/left_before_pump_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Left Before Pump"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="leftBeforePump"
        />

<!--    left after pump button -->
    <Button
        android:id="@+id/left_after_pump_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Left After Pump"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="leftAfterPump"
        />

</LinearLayout>