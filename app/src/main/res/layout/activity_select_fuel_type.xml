<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectFuelType">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/car"
            android:transitionName="logo_image"
            android:layout_gravity="center"/>

        <TextView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Select Fuel Type"
        android:textColor="#000"
        android:textSize="40sp"
        android:transitionName="logo_text"
        android:textAlignment="center"
        />

<!--    card view for fuel type-->
    <androidx.cardview.widget.CardView
        android:id="@+id/fuel_type_card_view_diesel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#F4C424"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp"

        >

<!--       Text view for fuel type-->
        <TextView
            android:id="@+id/fuel_type_text_view_diesel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Diesel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>

<!--    card view for fuel type-->
    <androidx.cardview.widget.CardView
        android:id="@+id/fuel_type_card_view_petrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuel_type_card_view_diesel"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#F4C424"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp">

<!--       Text view for fuel type-->
        <TextView
            android:id="@+id/fuel_type_text_view_petrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Petrol"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>